//windowSizer 调整窗体大小
namespace web.layout.behavior.windowSizer;
 
onAttach = function( ltEle ){
	var border = ltEle.getCustomAttribute("border") or "4px";
	var corner = ltEle.getCustomAttribute("corner") or "8px"; 

	ltEle.windowSizer = "true";
	var ltBorder = ltEle.createElement("div") 
	ltBorder.setAttribute("sizer-command","hitTopleft")
	with ltBorder.style {
		left = 0;
		top = 0; 
		width = corner;
		height = corner;
		cursor = "nw-resize";
		position = "absolute";
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitLeft")
	with ltBorder.style {
	    left = 0;
	    top = corner;
	    bottom = corner;
	    width = border;
	    cursor = "w-resize"; 
	    position = "absolute"
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitBottomleft")
	with ltBorder.style{
	    left = 0;
	    bottom = 0;
	    width = corner;
	    height = corner;
	    cursor = "sw-resize"; 
	    position = "absolute";
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitTop")
	with ltBorder.style{
	    left = corner;
	    top = 0;
	    right = corner;
	    height = border;
	    cursor = "n-resize"; 
	    position = "absolute"
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitBottom")
	with ltBorder.style{
	    left = corner;
	    bottom = 0;
	    right = corner;
	    height = border;
	    cursor = "s-resize"; 
	    position = "absolute"
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitTopright")
	with ltBorder.style{ 
	    top = 0;
	    right = 0;
	    width = corner;
	    height = corner;
	    cursor = "ne-resize"; 
	    position = "absolute"
	}

	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitRight")
	with ltBorder.style{
	    right = 0;
	    top = corner;
	    bottom = corner;
	    width = border;
	    cursor = "e-resize"; 
	    position = "absolute"
	}
	
	var ltBorder = ltEle.createElement("div")
	ltBorder.setAttribute("sizer-command","hitBottomright")
	with ltBorder.style{
	    right = 0;
	    bottom = 0;
	    width = corner;
	    height = corner;
	    cursor = "se-resize"; 
	    position = "absolute"
	}
}; 

onMouseDown = function(ltTarget,ltEle,x,y,mouseParams){
	if( mouseParams.button_state == 1/*_HL_MAIN_MOUSE_BUTTON*/ ){ 
		var sizerCommand = ltTarget.getAttribute("sizer-command");
		if( sizerCommand ){
			var form = ltEle.getForm(); 
			call( form[sizerCommand],form );
			return true; 
		} 
	}
}