namespace win.dlg;
 
color = class {
	ctor(hParent,option){
		var cc = CHOOSECOLOR(); 
		cc.structSize = ..raw.sizeof(cc);
		cc.hwndOwner = hParent[["hwnd"]] : hParent; 
		cc.rgbResult = rgb;
		..table.mixin(cc,option ); 
		cc.lpCustColors = ..raw.malloc(36);  
	} 
	choose = function(){
		var re = ChooseColor(cc);
		return cc.rgbResult; 
	} 
}

var dll = ..raw.loadDll("comdlg32.dll");
namespace color{
	ChooseColor = dll.api("ChooseColor", "INT(struct &lpcc)");
	CHOOSECOLOR = class {
		INT structSize;
		int hwndOwner;
		int hInstance;
		INT rgbResult;
		pointer lpCustColors;
		INT flags;
		int custData;
		pointer lpfnHook;
		string templateName;
	} 
} 

