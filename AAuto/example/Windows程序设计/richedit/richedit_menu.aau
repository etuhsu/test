import win.ui.menu;
winform.richedit.wndproc = function(hwnd,message,wParam,lParam){
	if( message == 0x204/*_WM_RBUTTONDOWN*/  ){ 
	   winform.richedit.popMenu();
	}
}
 
winform.show() 
win.loopMessage();
