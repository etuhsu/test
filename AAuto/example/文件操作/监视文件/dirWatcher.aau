winform.add( 
btnWatch={ dr=1;bottom=380;text="监视目录";left=354;dt=1;top=342;z=1;right=526;cls="button" };
editChange={ dr=1;dl=1;bottom=322;vscroll=1;right=564;left=23;dt=1;top=21;multiline=1;z=2;db=1;hscroll=1;edge=1;cls="edit" }
